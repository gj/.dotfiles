alias code='cd ~/code'
alias desk='cd ~/Desktop'
alias path='echo $PATH | tr -s ":" "\n"'
alias v='vim'
alias v.='vim .'
alias hb='hub browse'
alias be='bundle exec'
alias brewup='brew update; brew upgrade; brew cleanup; brew doctor'
alias -- -='cd -'
alias ngrok='~/code/ngrok'
alias r='cd ~/code/rust'
alias t='tree -axCFL 10 -I "target|node_modules|_build|.git" | less -R'
alias ts='tree -shaxCFL 10 -I "target|node_modules|_build|.git" | less -R'
alias cat=bat
alias l='exa -la --git --group-directories-first'

# Docker
alias dps='docker ps --format "table {{.ID}}\t{{.Names}}\t{{.Status}}"'
alias dc='docker-compose'

alias cssh='i2cssh -c'
alias mkdir='mkdir -p'
alias vimrc='vim ~/.vimrc'
alias zshrc='vim ~/.zshrc'
alias reload='source ~/.zshrc'
alias dotfiles='cd ~/.dotfiles'
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias http='ruby -run -e httpd -- -p 5000 .'
alias https='hs --ssl --cert ~/.ssl/localhost.crt --key ~/.ssl/localhost.key -a localhost -o'

# Hidden File Visibility
alias showFiles='defaults write com.apple.finder AppleShowAllFiles YES; killall Finder /System/Library/CoreServices/Finder.app'
alias hideFiles='defaults write com.apple.finder AppleShowAllFiles NO; killall Finder /System/Library/CoreServices/Finder.app'

# Flatiron
alias f='cd ~/code/flatiron'
alias i='cd ~/code/flatiron/ironboard'
alias okta-aws='f(){ cmd="docker run -it --rm -v ~/.aws:/package/.aws okta-aws sh -c \"python /package/samlapi.py "$@"\""; bash -c "${cmd}" unset -f f; }; f'

